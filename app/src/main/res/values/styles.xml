<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The TabLayout textsize in the activity_main.xml is set to 16sp-->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">

        <!--The line under the category word in the tab displays black when the tab is selected-->
        <item name="tabIndicatorColor">@android:color/black</item>

        <!--The selected category word displays black when the tab is selected-->
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>

</resources>
